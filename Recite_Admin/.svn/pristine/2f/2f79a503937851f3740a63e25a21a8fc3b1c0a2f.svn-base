<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="../lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">

 var serchmobile = sessionStorage.getItem('serchmobile');
 var pcaid = '';
 			//性别定义
			var agender = "";
			if($("#sex-1").prop('checked')==true){
				agender= 0
			}
		    if($("#sex-2").prop('checked')==true){
				agender= 1
			}
			//是否会员
			var aflag = "";
			if($("#flag-1").prop('checked')==true){
				aflag= 1
			}
		    if($("#flag-2").prop('checked')==true){
				aflag= 0
			}
			//用户是否启用
			var astatus = "";
			if($("#status-1").prop('checked')==true){
				astatus= 1
			}
		    if($("#status-2").prop('checked')==true){
				astatus= 0
			}
			         	//注册来源
			var asource = 0;
			switch ($("#source").val()) {
				case "平台注册":
					asource=1
					break;
				case "微博":
					asource=2
					break;
				case "微信":
					asource=3
					break;
				case "QQ":
					asource=4
					break;
				default:
					// statements_def
					break;
			}
 //改变省的时候市和区改变
 $("#province").change(function(event) {
 	$("#city").html("");
 	$("#district").html("");
 	var prarentid=$(this).val();
 	$.ajax({
 	url:"http://47.100.200.62:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:prarentid
 	},
 	success:function(data){
	 	var suntid=data.data[0].pcaId
	      for(var i=0;i<data.data.length;i++)
	      {
	      	 $("#city").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
	      }
	       $.ajax({
		 	url:"http://47.100.200.62:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:suntid
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#district").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      	  pcaid = ($("#district").val());
		      }

		 	}
		 })

	 	}
	 })

 });
 //改变市的时候区发生改变
 $("#city").change(function(event) {
  	$("#district").html("");
 	var prarentid=$(this).val();
 	$.ajax({
 	url:"http://47.100.200.62:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:prarentid
 	},
 	success:function(data){
	 	var suntid=data.data[0].pcaId
	      for(var i=0;i<data.data.length;i++)
	      {
	      	 $("#district").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
	      	 pcaid = ($("#district").val());
	      }
	 	}
	 })
 });
 //改变区的时候区发生改变
 $("#district").change(function(event) {
	  pcaid = $(this).val();
 });
 //遍历所有省的信息
 area();
 function area(){
 	$.ajax({
 	url:"http://47.100.200.62:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:0
 	},
 	success:function(data){
 		var prarentid=data.data[0].pcaId;
      for(var i=0;i<data.data.length;i++)
      {
      	 $("#province").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
      }
	   $.ajax({
	 	url:"http://47.100.200.62:8760/v0.1/area/",
	 	type:"get",
	 	data:{
	 		parentPca:prarentid
	 	},
	 	success:function(data){
	 	var suntid=data.data[0].pcaId
	      for(var i=0;i<data.data.length;i++)
	      {
	      	 $("#city").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
	      }

		    $.ajax({
		 	url:"http://47.100.200.62:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:suntid
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#district").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      }
		        pcaid = ($("#district").val());
		 	}
	 })
	 	}
	 })
 	}
 })
 }

 if(serchmobile!=""){
 	 $.ajax({
	      type: 'get',
	      url: 'http://47.100.200.62:8760/v0.1/adminUser/mobile?mobile='+serchmobile+'',
	      success: function(data){
	      	console.log(data)
     		 console.log(data.data.length)
	      	for(var i=0;i<data.data.length;i++){
	      		//定义性别
	         if(data.data[i].gender==0){
               $("#sex-1").attr("checked",true);
	        }
	        else if(data.data[i].gender==1){
	        	 $("#sex-2").attr("checked",true);
	        } 
	        
	        //注册来源
		      if(data.data[i].source==1){
	             $("#source").val("平台注册")
			}
			else if(data.data[i].source==2){
	           $("#source").val("微博")
			}
			else if(data.data[i].source==3){
				$("#source").val("微信")
			}
			else if(data.data[i].source==4){
				$("#source").val("QQ")
			}
	        data.data[i].member_Flag==0?$("#flag-2").attr("checked",true):$("#flag-1").attr("checked",true);
	        data.data[i].status==0?$("#status-2").attr("checked",true):$("#status-1").attr("checked",true);
	        $("#user_id").val(data.data.user_Id);     
	      	$("#user_name").val(data.data.user_Name);
	      	$("#password").val(data.data.password);
	      	$("#user_realname").val(data.data.user_Realname);
	      	$("#birthday").val(data.data.birthday);
	      	$("#certificate_num").val(data.data.certificate_Num);
	      	$("#mobile").val(data.data.mobile);
	      	$("#work_unit").val(data.data.work_Unit);
	      	$("#email").val(data.data.email);
	      	$("#QQ").val(data.data.qq);
	      	$("#wechat_num").val(data.data.wechat_Num);
	      	$("#remark").val(data.data.remark);
	      	$("#pca_id").val(data.data.pca_Id)
	      	
	      	}
	      	
	       }
	 })
//点击提交修改编辑信息
	 var reg = /^\s*$/g;
 		$("#btn").click(function(){
		if($("#user_name").val()==""||reg.test($("#user_name").val()))
	     	{
	     		layer.msg("用户名不能为空")
	     	}	
	   else{
		  	$.ajax({
		      type: 'post',
		      url: 'http://47.100.200.62:8760/v0.1/adminUser/update',
		      data: {
		        user_Id:$("#user_id").val(),     
			    user_Name:$("#user_name").val(),
			    password:$("#password").val(),
			    user_Realname:$("#user_realname").val(),
			    birthday:$("#birthday").val(),
			    certificate_Num:$("#certificate_num").val(),
			    mobile:$("#mobile").val(),
			    work_Unit:$("#work_unit").val(),
			    email:$("#email").val(),
			    qq:$("#QQ").val(),
			    wechat_Num:$("#wechat_num").val(),
			    remark:$("#remark").val(),
			    member_Flag:aflag,
			    gender:agender,
			    source:asource,
			    status:astatus,
			    pca_Id:pcaid
		      },
		      success: function(data){
		        if(data.success==true){
		        	layer.msg("修改成功",{icon:1,time:1000})
		        }
		       else {
		         layer.msg('data.msg',{icon:1,time:1000});
		       }
		      },
		});
   }
  })
 }
if(serchmobile==""){
  $("#mobile").attr("disabled",false);
  $("#password").attr("disabled",false);
   var reg = /^\s*$/g;
 	$("#btn").click(function(){
		 if(($("#user_name").val()==""||reg.test($("#user_name").val()))||($("#mobile").val()==""||reg.test($("#mobile").val())))
	     	{
	     		layer.msg("用户名不能为空或手机号不能为空")
	     	}
         else{

			$.ajax({
		      type: 'post',
		      url: 'http://47.100.200.62:8760/v0.1/adminUser/add',
		      data: {        
			    user_Name:$("#user_name").val(),
			    password:$("#password").val(),
			    user_Realname:$("#user_realname").val(),
			    birthday:$("#birthday").val(),
			    certificate_Num:$("#certificate_num").val(),
			    mobile:$("#mobile").val(),
			    work_Unit:$("#work_unit").val(),
			    email:$("#email").val(),
			    qq:$("#QQ").val(),
			    wechat_Num:$("#wechat_num").val(),
			    remark:$("#remark").val(),
			    member_Flag:aflag,
			    gender:agender,
			    source:asource,
			    status:astatus,
			    pca_Id:pcaid
		      },
		      success: function(data){
		        if(data.success==true){
		           layer.msg("添加成功",{icon:1,time:1000})
		        }
		       else {
		         layer.msg(data.msg,{icon:1,time:1000});
		       }
		      }
		 });
		  
    }
 })
}
</script> 

</body>
</html>