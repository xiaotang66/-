<script type="text/javascript" src="../lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
var sesspcaid = sessionStorage.getItem('pacid');
if(sesspcaid==""){
 	var pcaid = "";
  var sunid = "";
 //列表显示所有的省
  $.ajax({
		 	url:"http://47.100.200.62:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:0
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#province").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      }
		        pcaid = ($("#province").val());
		   $.ajax({
		 	url:"http://47.100.200.62:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:pcaid
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#city").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      }
		        sunid = ($("#city").val());
		 	}
	 })
		 	}
	 })
   $("#province").change(function(event) {
	  pcaid = $(this).val();
	  $("#city").html("");
	  $.ajax({
		 	url:"http://47.100.200.62:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:pcaid
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#city").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      }
		      sunid = $("#city").val();
		 	}
	 })
	  
 });
  $("#city").change(function(event) {
	  sunid = $(this).val(); 
 });
 $("#btn").click(function(){
 	//console.log($("#province").val())
 	$.ajax({
	      type: 'post',
	      url: 'http://47.100.200.62:8760/v0.1/base/pca/add',
	      data: {
	        parent_Pca:sunid,
	        pca_Flag:3,
	        pca_Name:$("#district").val()
	      },
	      success: function(data){
	      	if(data.success==true){
	      		layer.msg("添加成功！")
	      	}
	      	else{
	      		layer.msg(data.msg)
	      	}
	       }
	 })

 })
}
else{
	var perantid =sessionStorage.getItem('parentid');//获取父id
	var status = sessionStorage.getItem('pcastatus');
	console.log(sesspcaid)
	var grandid =""//当前区所在的市的父id,即当前区所在省的id
	//首先通过区id查询到市id,将所在市现在在页面
	$.ajax({
 	url:"http://47.100.200.62:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:perantid
 	},
 	success:function(data){
 		for(var i=0;i<data.data.length;i++)
 		{
 			//当前区所在市的自身id就是当前区的父id
 		 if(data.data[i].pcaId==sesspcaid){
           $("#district").val(data.data[i].pcaName)
 		 }
 		}
 	  //将所在显市示在页面
		$.ajax({
	 	url:"http://47.100.200.62:8760/v0.1/area/area",
	 	type:"get",
	 	data:{
	 		pca_id:perantid,
	 	},
	 	success:function(data){
	 		var prouncid=data.data.parentPca
	      $("#city").append("<option>"+data.data.pcaName+"</option>")
	      //将所在省显示在页面
			$.ajax({
		 	url:"http://47.100.200.62:8760/v0.1/area/area",
		 	type:"get",
		 	data:{
		 		pca_id:prouncid
		 	},
		 	success:function(data){
		 		console.log(data)
		        $("#province").append("<option>"+data.data.pcaName+"</option>")
		 	 
		 	}
		 })	
	      
	 	}
	 })	
 	
 	}
 })
	
   //改变区的时候再次给perantid赋值
   $("#province").change(function(event) {
	  perantid = $(this).val();
 });
//修改点击保存
  $("#btn").click(function(){
 	//console.log($("#province").val())
 	$.ajax({
	      type: 'post',
	      url: 'http://47.100.200.62:8760/v0.1/base/pca/udate',
	      data: {
	      	pca_Id:sesspcaid,//自身id
	        parent_Pca:perantid,//父id
	        pca_Flag:3,//所在等级
	        pca_Name:$("#district").val(),//市级名称
	        status:status//当前状态
	      },
	      success: function(data){
	      	if(data.success==true){
	      		layer.msg("添加成功！")
	      	}
	      	else{
	      		layer.msg(data.msg)
	      	}
	       }
	 })
 })

}
  
</script> 
