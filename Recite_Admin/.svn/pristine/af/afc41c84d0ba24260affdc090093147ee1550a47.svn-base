<script type="text/javascript" src="../lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
 var serchschool = sessionStorage.getItem('serchschool');
 var pcaid="";//学校地区
 var type="";//判断学校类别
 var status=""//学校状态
 area();
 //改变省的时候市和区改变
 function provchange(cityid,school_pca){

   $("#city").html("");
 	$("#district").html("");
 	var prarentid= $("#province").val();
 	$.ajax({
 	url:"http://192.168.1.9:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:prarentid
 	},
 	success:function(data){
	 	var suntid=data.data[0].pcaId
	      for(var i=0;i<data.data.length;i++)
	      {
	      	 $("#city").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
	      	   $("#city").val(cityid)
	      }
	       $.ajax({
		 	url:"http://192.168.1.9:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:suntid
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#district").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      	 
		      }
		       pcaid = ($("#district").val());

		 	}
		 })
	       citychange(school_pca,cityid)

	 	}
	 })
 }
 $("#province").change(function(event) {
 	provchange(0)
 });
 //改变市的时候区发生改变
 $("#city").change(function(event) {
  	citychange(0)
 });
 function citychange(schoolid,cityid){
 	  $("#district").html(" ");
 	 	var prarentid=""
 	 	if($("#city").val()==null)
 	 	{
 	 	   prarentid=cityid;
 	 	}
 	 	else{
 	 	   prarentid=$("#city").val()
 	 	}
 	$.ajax({
 	url:"http://192.168.1.9:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:prarentid
 	},
 	success:function(data){
	 	var suntid=data.data[0].pcaId;
	 	  $("#district").html(" ");
	      for(var i=0;i<data.data.length;i++)
	      {
	      	 $("#district").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
	      	 pcaid = ($("#district").val());
	      }
         $("#district").val(schoolid)
	 	}
	 })
 	
 }
 //改变区的时候区发生改变
 $("#district").change(function(event) {
	  pcaid = $("#district").val();
 });
 //遍历所有省的信息
 function area(){
 	$.ajax({
 	url:"http://192.168.1.9:8760/v0.1/area/",
 	type:"get",
 	data:{
 		parentPca:0
 	},
 	success:function(data){
 		var prarentid=data.data[0].pcaId;
      for(var i=0;i<data.data.length;i++)
      {
      	 $("#province").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
      }
	   $.ajax({
	 	url:"http://192.168.1.9:8760/v0.1/area/",
	 	type:"get",
	 	data:{
	 		parentPca:prarentid
	 	},
	 	success:function(data){
	 	var suntid=data.data[0].pcaId
	      for(var i=0;i<data.data.length;i++)
	      {
	      	 $("#city").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
	      }
		    $.ajax({
		 	url:"http://192.168.1.9:8760/v0.1/area/",
		 	type:"get",
		 	data:{
		 		parentPca:suntid
		 	},
		 	success:function(data){
		      for(var i=0;i<data.data.length;i++)
		      {
		      	 $("#district").append("<option value="+data.data[i].pcaId+">"+data.data[i].pcaName+"</option>")
		      }
		        pcaid = ($("#district").val());
		 	}
	 })
	 	}
	 })
 	}
 })
 }
 if(serchschool!=""){
 	//渲染当前学校的信息
 	$.ajax({
 		type:"get",
 		url:"http://192.168.1.9:8760/v0.1/base/school/schoolId",
 		data:{
 			school_id:serchschool
 		},
 		success:function(data){
 			var cityid="";
 			data.data.status==0?$("#status-2").attr("checked",true):$("#status-1").attr("checked",true);
 			switch (data.data.schoole_type) {
 				case 1:
 					$("#type-1").attr("checked",true)
 					break;
 				case 2:
 					$("#type-2").attr("checked",true)
 					break;
 				case 3:
 					$("#type-3").attr("checked",true)
 					break;
 				default:
 					// statements_def
 					break;
 			}
 			$("#school_name").val(data.data.school_name);
 			$("#school_id").val(data.data.school_id);
 			$("#school_addr").val(data.data.school_addr);
 			var school_pca=data.data.school_pca;
 			$.ajax({
                url:"http://192.168.1.9:8760/v0.1/area/area",
			 	type:"get",
			 	data:{
			 		pca_id:school_pca,
			 	},
			 	success:function(data){
			 		var  districtname = data.data.pcaName
			 		 cityid=data.data.parentPca
                     $.ajax({
	                url:"http://192.168.1.9:8760/v0.1/area/area",
				 	type:"get",
				 	data:{
				 		pca_id:cityid,
				 	},
				 	success:function(data){
				 		var  citytname = data.data.pcaName
				 		var prouncid=data.data.parentPca;
	                   $.ajax({
			                url:"http://192.168.1.9:8760/v0.1/area/area",
						 	type:"get",
						 	data:{
						 		pca_id:prouncid,
						 	},
						 	success:function(data){
			                $("#province").val(prouncid);
			                 provchange(cityid,school_pca)
			                
						 	}
		 			      }) 
				 	}
 			      }) 
			    }
 			})
 		}
 	})
 	//点击更新学校信息
 	$("#btn").click(function(){
 		 if($("#type-1").prop("checked")==true)
		 {
		 	type=1;
		 }
		 if($("#type-2").prop("checked")==true)
		 {
		 	type=2;
		 }
		 if($("#type-3").prop("checked")==true)
		 {
		 	type=3;
		 }
		 if($("#status-1").prop("checked")==true)
		 {
		 	status=1
		 }
		  if($("#status-2").prop("checked")==true)
		 {
		 	status=0
		 }
         $.ajax({
	      type:'post',
	      url:'http://192.168.1.9:8760/v0.1/base/school/update',
	      data:{
	      	school_id:$("#school_id").val(),
	        school_name:$("#school_name").val(),
 			school_pca:pcaid,
 			school_addr:$("#school_addr").val(),
 			schoole_type:type,
 			status:status
	      },
	      success: function(data){
	        if(data.success==true){
	        	layer.msg("更新成功")
	        }
	       }
	 })

 	})
 
 }
 if(serchschool==""){
 	$("#btn").click(function(){ 
 		if($("#type-1").prop("checked")==true)
		 {
		 	type=1;
		 }
		 if($("#type-2").prop("checked")==true)
		 {
		 	type=2;
		 }
		 if($("#type-3").prop("checked")==true)
		 {
		 	type=3;
		 }
		 if($("#status-1").prop("checked")==true)
		 {
		 	status=1
		 }
		  if($("#status-2").prop("checked")==true)
		 {
		 	status=0
		 }
 	$.ajax({
 		type:"post",
 		url:"http://192.168.1.9:8760/v0.1/base/school/add",
 		data:{
 			school_name:$("#school_name").val(),
 			school_pca:pcaid,
 			school_addr:$("#school_addr").val(),
 			school_type:type,
 			status:status
 		},
 		success:function(data){
 			if(data.success==true){
 				layer.msg("添加成功")
 			}
 		}
 	})
 	})
 	
 }
 
</script> 
