<script type="text/javascript" src="../lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
var searchclass = sessionStorage.getItem('searchclass');
 console.log(searchclass)
 	 $.ajax({
	      type: 'get',
	      url: 'http://192.168.1.18:8760/v0.1/class/'+searchclass+'',
	      data:{
	      },
	      success: function(data){
	      	console.log(data)
	      	data.data.status==0?$("#status-2").attr("checked",true):$("#status-1").attr("checked",true);
	      	data.data.allow_join==0?$("#join-2").attr("checked",true):$("#join-1").attr("checked",true);
	      	console.log(data);
	        $("#class_id").val(data.data.class_id);
	        $("#machine_Grade").val(data.data.machine_Grade);     
	      	$("#class_name").val(data.data.class_name);
	      	$("#grade").val(data.data.grade);
	      	$("#invite_code").val(data.data.grade.invite_code);
	      	$("#pca_id").val(data.data.pca_id);
	      	$("#school_id").val(data.data.school_id);     
	      	$("#submitDate").val(data.data.submitDate);
	      	$("#teacher").val(data.data.teacher);
	      	$("#teacherInfo").val(data.data.teacherInfo);
	      	$("#teacher_name").val(data.data.teacher_name)
	       }
	 })
//点击提交修改编辑信息
	 var reg = /^\s*$/g;
 		$("#btn").click(function(){
			//录音状态
			var astatus = "";
			if($("#status-1").prop('checked')==true){
				astatus= 1
			}
		    if($("#status-2").prop('checked')==true){
				astatus= 0
			}
			//是否允许添加
			var ajoin = "";
			if($("#join-1").prop('checked')==true){
				ajoin= 1
			}
		    if($("#join-2").prop('checked')==true){
				ajoin= 0
			}
		  	$.ajax({
		      type: 'post',
		      url: 'http://192.168.1.18:8760/v0.1/class/'+searchclass+'',
		      data: {
		    class_id:searchclass,
	        //machine_Grade:$("#machine_Grade").val(),    
	      	class_name:$("#class_name").val(),
	      	grade:$("#grade").val(),
	      	invite_code:$("#invite_code").val(),
	      	pca_id:$("#pca_id").val(),
	      	school_id:$("#school_id").val() ,
	      	submitDate:$("#submitDate").val(),
	      	teacher:$("#teacher").val(),
	      	teacherInfo:$("#teacherInfo").val(),
	      	teacher_name:$("#teacher_name").val(),
	      	status:astatus,
	      	allow_join:ajoin
		      },
		      success: function(data){
		        if(data.success==true){
		           layer.msg("修改成功",{icon:1,time:1000})
		        }
		       else {
		         layer.msg(data.msg,{icon:1,time:1000});
		       }
		      }
		 });
 })

</script> 

</body>
