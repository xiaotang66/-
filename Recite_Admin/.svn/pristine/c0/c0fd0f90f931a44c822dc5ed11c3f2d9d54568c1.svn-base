    	  }); 
})
$.ajax({
     url: 'http://47.100.200.62:8760/v0.1/sys/version',
     type: 'get',
     success:function(data){
     	console.log(data)
     	$("#download_Url").val('http://zhihui-reader.oss-cn-shanghai.aliyuncs.com/file/'+data.data.download_Url)
     } 
})
//获取cookie
function getCookie(_name)
{
  var cookie = document.cookie;
  var arr = cookie.split("; ");//注意空格，容易出错。。。。。
  for(var i=0;i<arr.length;i++)
  {
    var newarr = arr[i].split("=");
    
    if(newarr[0]== _name)
    {
      return newarr[1];
      
    }
  }
}
