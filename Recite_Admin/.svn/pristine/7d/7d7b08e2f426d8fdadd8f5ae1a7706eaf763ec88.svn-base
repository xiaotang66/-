//渲染页面课本列表信息
function textlist(data){ 
         var type=""
		  var str = "";
		  var status = ""
		  var stext="";
		  var iconfont="";
		  var funct=""
		  for(var i=0;i<data.data.list.length;i++){
		  	if(data.data.list[i].status==0){
	        	status="失效"; 
	        	atext="恢复"
	        	stext="label-default";
	        	iconfont="&#xe615;"
	        	funct="text_start(this,'10001')";

		        }
		         if(data.data.list[i].status==1){
		        	status="正常"; 
		        	atext="删除"
		        	stext="label-success";
		        	iconfont="&#xe631;";
		        	funct="text_stop(this,'10001')";
		        }
		  	str+= 
		  	"<tr class='text-c'><td><input type='checkbox' value='1' name='' data-id="+data.data.list[i].classbookId+" class='radio'></td><td>"+data.data.list[i].classbookName+"</td><td>"+data.data.list[i].classbookImg+"</td><td>"+data.data.list[i].hot+"</td><td>"+data.data.list[i].sort+"</td><td class='td-status'><span class='label "+stext+" radius'>"+status+"</span></td><td class='td-manage'><a style='text-decoration:none' onClick="+funct+" href='javascript:;'' title="+atext+"'><i class='Hui-iconfont'>"+iconfont+"</i></a> <a title='编辑'' href='javascript:;'class='edit' class='ml-5' style='text-decoration:none'><i class='Hui-iconfont'>&#xe6df;</i></a> </td></tr>"
		  }
          $("#tbody1").html(str);
          $(".edit").click(function(event){
          	 text_edit('编辑','textbook_add.html','4','','500');
             sessionStorage.setItem("searchtext",$(this).parent().siblings().eq(0).children().attr("data-id"));
          })
}
textbook()
//分页渲染
function textbook(){
	$.ajax({
		type:"get",
		url:"http://47.100.200.62:8760/v0.1/classbook",
		data:{
			pageNumber:1
		},
		success:function(data){

			textlist(data);
    //分页
		laypage({  
        cont: 'page1', 
        pages: data.data.totalPage, //通过后台拿到的总页数  
        curr: 1, //初始化当前页  
        jump: function(e){ //触发分页后的回调  
            $.getJSON('http://47.100.200.62:8760/v0.1/classbook', {pageNumber: e.curr}, function(res){  

            	 textlist(res);
            });  
        }  
    });

		}
	})
}
	
