<script type="text/javascript">
    $(".btn-success").click(function(event) {
        var account = $("#account").val() ;
        var pwd = $("#account").val() ;
        $.ajax({
            type: 'POST',
            url: 'http://47.100.200.62:8760/v0.1/admin/login',
            headers:{"Authorization":getCookie('token')},
            data: {
                user_name:$("#account").val(),
                password:$("#pwd").val()
            },
            success: function(data){
                if(data.success==true){
                    sessionStorage.setItem("loginid",$("#account").val());
                    setCookie("token",data.token,12)
                    console.log(getCookie("token"))
                    //sessionStorage.setItem("token",data.token);
                    location.href="index.html?token="+data.token;
                }
                else {
                    layer.msg('账号或密码错误',{icon:1,time:1000});
                }
            }
        });
    });

//设置cookie
function setCookie(_name,val,expires){
  var d = new Date();
  d.setDate(d.getDate()+expires);
  document.cookie=_name+"="+val+";path=/;"+"expires="+d;
}
//获取cookie
function getCookie(_name)
{
  var cookie = document.cookie;
  var arr = cookie.split("; ");//注意空格，容易出错。。。。。
  for(var i=0;i<arr.length;i++)
  {
    var newarr = arr[i].split("=");
    
    if(newarr[0]== _name)
    {
      return newarr[1];
      
    }
  }
}
</script>
