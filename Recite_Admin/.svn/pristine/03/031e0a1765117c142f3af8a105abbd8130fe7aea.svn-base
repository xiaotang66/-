<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="../lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
 var serchkeyword = sessionStorage.getItem('serchkeyword');
 console.log(serchkeyword)
 if(serchkeyword!=""){
 	 $.ajax({
	      type: 'get',
	      url: 'http://192.168.1.9:8760/v0.1/ad/id',
	      data:{
	      	adId:serchkeyword
	      },
	      success: function(data){
	      	console.log(data);
	      	data.data.keywordType==0?$("#type-1").attr("checked",true):$("#type-2").attr("checked",true);
	      	$("#keywordId").val(serchkeyword);
	      	$("#keywordName").val(data.data.keywordName);
	      	$("#sort").val(data.data.sort);
	      	$("#status").val(data.data.status);
	      	$("#keywordType").val(data.data.keywordType);
	       }
	 })
//点击提交修改编辑信息
	 var reg = /^\s*$/g;
 		$("#btn").click(function(){
			if($("#keywordName").val()==""||reg.test($("#keywordName").val()))
	     	{
	     		layer.msg("关键词名称不能为空")
	     	}
		    else{
			//信息类型
			var atype = "";
			if($("#type-1").prop('checked')==true){
				atype= 0
			}
		    if($("#type-2").prop('checked')==true){
				atype= 1
			}
			//信息状态
			var astatus = "";
			if($("#status-1").prop('checked')==true){
				astatus= 1
			}
		    if($("#status-2").prop('checked')==true){
				astatus= 0
			}
		  	$.ajax({
		      type: 'post',
		      url: 'http://192.168.1.9:8760/v0.1/keyword/update',
		      data: {  
		        keywordId:serchkeyword,      
			    KeywordName:$("#KeywordName").val(),
			    hot:$("#hot").val(),
			    sort:$("#sort").val(),
			    keywordType:atype,
			    status:astatus
		      },
		      success: function(data){
		        if(data.success==true){
		           layer.msg("修改成功",{icon:1,time:1000})
		        }
		       else {
		         layer.msg(data.msg,{icon:1,time:1000});
		       }
		      }
		 });
   }
 })
 }
 if(serchkeyword=="")
 {
   var reg = /^\s*$/g;
 		$("#btn").click(function(){
		 if($("#keywordName").val()==""||reg.test($("#keywordName").val()))
	     	{
	     		layer.msg("关键词名称不能为空")
	     	}
         else{
			//信息类型
			var atype = "";
			if($("#type-1").prop('checked')==true){
				atype= 1
			}
		    if($("#type-2").prop('checked')==true){
				atype= 2
			}
			//信息状态
			var astatus = "";
			if($("#status-1").prop('checked')==true){
				astatus= 1
			}
		    if($("#status-2").prop('checked')==true){
				astatus= 0
			}
		  	$.ajax({
		      type: 'post',
		      url: 'http://192.168.1.9:8760/v0.1/keyword/admin',
		      data: {        
			    KeywordName:$("#KeywordName").val(),
			    hot:$("#hot").val(),
			    sort:$("#sort").val(),
			    keywordType:atype,
			    status:astatus
		      },
		      success: function(data){
		        if(data.success==true){
		           layer.msg("添加成功",{icon:1,time:1000})
		        }
		       else {
		         layer.msg(data.msg,{icon:1,time:1000});
		       }
		      }
		 });
         }

 })
 }

    
</script> 

</body>
</html>