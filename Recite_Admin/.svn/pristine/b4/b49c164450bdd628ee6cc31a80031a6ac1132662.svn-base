<script type="text/javascript">
//根据广告名称查询广告
$("#search").click(function(){
	$.ajax({
		type:"get",
		url:"http://47.100.200.62:8760/v0.1/ad/name",
		data:{
           adTitle:$("#serach-text").val()
		},
		success:function(data){
           var type=""
		  var str = "";
		  var status = ""
		  var stext="";
		  var iconfont="";
		  var funct="";
		  var atext=""
		  for(var i=0;i<data.data.length;i++){
		  	if(data.data[i].adType==1){
              type ="广告"
		  	}
		  	if(data.data[i].adType==2){
              type ="活动"
		  	}
		  	if(data.data[i].adStatus==0){
	        	status="失效"; 
	        	atext="无法恢复"
	        	stext="label-default";
	        	iconfont="&#xe615;"
	        	funct="ad_start(this,'10001')";

		        }
		         if(data.data[i].adStatus==1){
		        	status="正常"; 
		        	atext="删除"
		        	stext="label-success";
		        	iconfont="&#xe631;";
		        	funct="ad_stop(this,'10001')";
		        }
		  	str+= 
		  	"<tr class='text-c'><td><input type='checkbox' value='1' name='' data-id="+data.data[i].adId+"></td><td>1</td><td>"+data.data[i].adTitle+"</td><td>"+type+"</td><td>"+data.data[i].adUrl+"</td><td>"+data.data[i].startDate+"</td><td >"+data.data[i].endDate+"</td><td class='td-status'><span class='label "+stext+" radius'>"+status+"</span></td><td class='td-manage'><a style='text-decoration:none' onClick="+funct+" href='javascript:;'' title="+atext+"'><i class='Hui-iconfont'>"+iconfont+"</i></a> <a title='编辑'' href='javascript:;'class='edit' class='ml-5' style='text-decoration:none'><i class='Hui-iconfont'>&#xe6df;</i></a> </td></tr>"
		  }
          $("#tbody").html(str);
          $(".edit").click(function(event){
          	 ad_edit('编辑','advert_add.html','4','','500');
             sessionStorage.setItem("serchad",$(this).parent().siblings().eq(0).children().attr("data-id"));
          })
		}
	})
})
//获取所有广告信息
function adlist(data){
          var type=""
		  var str = "";
		  var status = ""
		  var stext="";
		  var iconfont="";
		  var funct="";
		  var atext=""
		  for(var i=0;i<data.data.list.length;i++){
		  	if(data.data.list[i].adType==1){
              type ="广告"
		  	}
		  	if(data.data.list[i].adType==2){
              type ="活动"
		  	}
		  	if(data.data.list[i].adStatus==0){
	        	status="失效"; 
	        	atext="无法恢复"
	        	stext="label-default";
	        	iconfont="&#xe615;"
	        	funct="ad_start(this,'10001')";

		        }
		         if(data.data.list[i].adStatus==1){
		        	status="正常"; 
		        	atext="删除"
		        	stext="label-success";
		        	iconfont="&#xe631;";
		        	funct="ad_stop(this,'10001')";
		        }
		  	str+= 
		  	"<tr class='text-c'><td><input type='checkbox' value='1' name='' data-id="+data.data.list[i].ad_Id+"></td><td>1</td><td>"+data.data.list[i].ad_Title+"</td><td>"+type+"</td><td>"+data.data.list[i].ad_Url+"</td><td>"+data.data.list[i].start_Date+"</td><td >"+data.data.list[i].end_Date+"</td><td class='td-status'><span class='label "+stext+" radius'>"+status+"</span></td><td class='td-manage'><a style='text-decoration:none' onClick="+funct+" href='javascript:;'' title="+atext+"'><i class='Hui-iconfont'>"+iconfont+"</i></a> <a title='编辑'' href='javascript:;'class='edit' class='ml-5' style='text-decoration:none'><i class='Hui-iconfont'>&#xe6df;</i></a> </td></tr>"
		  }
          $("#tbody").html(str);
          $(".edit").click(function(event){
          	 ad_edit('编辑','advert_add.html','4','','500');
             sessionStorage.setItem("serchad",$(this).parent().siblings().eq(0).children().attr("data-id"));
          })
}
//分页
$.ajax({
	      type: 'get',
	      url: 'http://192.168.1.9:8760/v0.1/ad/all',
	      data:{
	      	pageNumber:1
	      },
	      success: function(data){
	      	adlist(data);
	         //分页
			laypage({  
	        cont: 'page1', 
	        pages: data.data.totalPage, //通过后台拿到的总页数  
	        curr: 1, //初始化当前页  
	        jump: function(e){ //触发分页后的回调  
	            $.getJSON('http://192.168.1.9:8760/v0.1/ad/all', {pageNumber: e.curr}, function(res){  
	            	adlist(res);
	            });  
	        }  
	    });
		      
	      }  
	})
/*广告-添加*/
function ad_add(title,url,w,h){
	layer_show(title,url,w,h);
	sessionStorage.setItem("serchad","");
}
/*广告-删除*/
function ad_stop(obj,id){
	layer.confirm('确认删除？',function(index){
	$.ajax({
      type: 'post',
      url: 'http://47.100.200.62:8760/v0.1/ad/'+$(obj).parent().siblings().eq(0).children().attr("data-id")+'',
      data: {
      },
      success: function(data){
        $(obj).parent().prepend('<a onClick="ad_start(this,id)" href="javascript:;" title="无法恢复" style="text-decoration:none"><i class="Hui-iconfont">&#xe615;</i></a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-default radius">已删除</span>');
		$(obj).remove();
		layer.msg('已删除!',{icon: 5,time:1000});
        } 
      });   
	});
}
