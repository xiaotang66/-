<title>添加用户</title>
<meta name="keywords" content="">
<meta name="description" content="">
</head>
<body>
<article class="page-container">
	<form action="" method="post" class="form form-horizontal" id="form-member-add">
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>用户名：</label>
			<div class="formControls col-xs-8 col-sm-9">
			<input type="hidden" class="input-text" value="" placeholder="" id="user_id" name="user_id">
			<input type="hidden" class="input-text" value="" placeholder="" id="login" name="login">
			<input type="hidden" class="input-text" value="" placeholder="" id="pca_id" name="user_id">
			<input type="hidden" class="input-text" value="" placeholder="" id="server_flag" name="server_flag">
			<input type="hidden" class="input-text" value="" placeholder="" id="schoolId" name="schoolId">
			<input type="hidden" class="input-text" value="" placeholder="" id="user_img" name="user_img">
				<input type="text" class="input-text isnull" value="" placeholder="" id="user_name" name="user_name" required="required">
		    <input type="hidden" class="input-text isnull" value="" placeholder="" id="pca" name="pca" required="required">
		    <input type="hidden" class="input-text isnull" value="" placeholder="" id="clazz" name="clazz" required="required">
		    <input type="hidden" class="input-text isnull" value="" placeholder="" id="school" name="school" required="required">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">密码：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text isnull" value="" placeholder="" id="password" name="password" >
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">姓名：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" value="" placeholder="" id="user_realname" name="user_realname">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">性别：</label>
			<div class="formControls col-xs-8 col-sm-9 skin-minimal">
				<div class="radio-box">
					<input name="sex" type="radio" id="sex-1" checked>
					<label for="sex-1">男</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="sex-2" name="sex">
					<label for="sex-2">女</label>
				</div>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">用户身份：</label>
			<div class="formControls col-xs-8 col-sm-9 skin-minimal">
			  <div class="radio-box">
					<input name="identity" type="radio" id="identity-1" >
					<label for="identity-1">学生</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="identity-2" name="identity" checked>
					<label for="identity-2">教师</label>
				</div>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">出生日期：</label>
			<div class="formControls col-xs-8 col-sm-9 ">
			 <input type="text" onfocus="WdatePicker({maxDate:'%y-%M-%d' })" id="birthday" class="input-text Wdate" style="width:120px;" value="2018-01-01">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">证件号码：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" value="" placeholder="" id="certificate_num" name="certificate_num">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">单位：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" value="" placeholder="" id="work_unit" name="">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>手机号码：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text isnull" value="" placeholder="" id="mobile" name="mobile" >
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">电子邮箱：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" placeholder="@" name="email" id="email">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">QQ号码：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" placeholder="" name="QQ" id="QQ">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">微信号：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text" placeholder="wechat_num" name="" id="wechat_num">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">是否会员：</label>
			<div class="formControls col-xs-8 col-sm-9 skin-minimal">
			  <div class="radio-box">
					<input name="flag" type="radio" id="flag-1" checked>
					<label for="flag-1">是</label>
				</div>
				<div class="radio-box">
					<input type="radio" id="flag-2" name="flag">
					<label for="flag-2">否</label>
				</div>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">注册来源：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<select id="source">
					  <option value="平台注册">平台注册</option>
					  <option value="微博">微博</option>
					  <option value="微信">微信</option>
					  <option value="QQ">QQ</option>
				</select>
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">备注：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<textarea name="beizhu" cols="" rows="" class="textarea" id="remark"></textarea>
			</div>
		</div>
		<div class="row cl">
			<div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
				<input class="btn btn-primary radius isnull" type="button" value="&nbsp;&nbsp;提交&nbsp;&nbsp;" id="btn">
			</div>
		</div>
	</form>
</article>

