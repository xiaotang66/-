<script type="text/javascript" src="../lib/My97DatePicker/4.8/WdatePicker.js"></script> 
<script type="text/javascript" src="../lib/datatables/1.10.0/jquery.dataTables.min.js"></script> 
<script type="text/javascript" src="../lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
 var serchmobile = sessionStorage.getItem('serchmobile');
 if(serchmobile==""){
   //点击提交新增教师信息
	
	 var reg = /^\s*$/g;
     	
 		$("#btn").click(function(){
			if($("#user_name").val()==""||reg.test($("user_name").val()))
	     	{
	     		layer.msg("用户名不能为空")
	     	}	
		    else{
		    //注册来源
			var asource = 0;
			if($("#source").val()=="平台注册"){
	           asource=1
			}
			else if($("#source").val()=="微博"){
	           asource=2
			}
			else if($("#source").val()=="微信"){
				asource=3
			}
			else if($("#source").val()=="QQ"){
				asource=4
			}
			//性别定义
			var agender = "";
			if($("#sex-1").prop('checked')==true){
				agender= 0
			}
			else if($("#sex-2").prop('checked')==true){
				agender= 1
			}
			//是否会员
			var aflag = "";
			if($("#flag-1").prop('checked')==true){
				aflag= 1
			}
			else if($("#flag-2").prop('checked')==true){
				aflag= 0
			}
			//身份认证
			var identity = "";
			if($("#identity-1").prop('checked')==true){
				identity= 0
			}
			else if($("#identity-2").prop('checked')==true){
				identity= 1
			}
		  	$.ajax({
		      type: 'POST',
		      url: 'http://47.100.200.62:8760/v0.1/user/teacher/add',
		      data: {
		           
			    user_name:$("#user_name").val(),
			    password:$("#password").val(),
			    user_realname:$("#user_realname").val(),
			    birthday:$("#birthday").val(),
			    certificate_num:$("#certificate_num").val(),
			    mobile:$("#mobile").val(),
			    work_unit:$("#work_unit").val(),
			    email:$("#email").val(),
			    QQ:$("#QQ").val(),
			    wechat_num:$("#wechat_num").val(),
			    remark:$("#remark").val(),
			    member_flag:aflag,
			    gender:agender,
			    source:asource,
			    login:1,
			    pca_id:0,
			    serverFlag:1,
			    identity:identity,
			    user_img:"",
			    schoolId:1231,
			    pca:0,
			    clazz:0,
			    school:0,

		      },
		      success: function(data){
		        if(data.success==true){
		        	layer.msg('新增成功！',{icon:1,time:1000});
		        }
		       else {
		         layer.msg(data.msg,{icon:1,time:1000});
		       }
		      },
		     });
     }

 })
 }
 if(serchmobile!=""){
 	$.ajax({
	      type: 'get',
	      url: 'http://47.100.200.62:8760/v0.1/user',
	      data: {
	        user_Name:"",
	        user_Realname:"",
	        mobile:serchmobile
	      },
	      success: function(data){
	      	//定义性别
	         if(data.data[0].gender==0){
               $("#sex-1").attr("checked",true);
	        }
	        else if(data.data[0].gender==1){
	        	 $("#sex-2").attr("checked",true);
	        } 
	        //定义身份
	         if(data.data[0].identity==0){
               $("#identity-1").attr("checked",true);
	        }
	        else if(data.data[0].identity==1){
	        	 $("#identity-2").attr("checked",true);
	        } 
	        //注册来源
		      if(data.data[0].source==1){
	             $("#source").val("平台注册")
			}
			else if(data.data[0].source==2){
	           $("#source").val("微博")
			}
			else if(data.data[0].source==3){
				$("#source").val("微信")
			}
			else if(data.data[0].source==4){
				$("#source").val("QQ")
			}
	        data.data[0].member_flag==0?$("#flag-2").attr("checked",true):$("#flag-1").attr("checked",true);
	        $("#user_id").val(data.data[0].user_id);     
	      	$("#user_name").val(data.data[0].user_name);
	      	$("#password").val(data.data[0].password);
	      	$("#user_realname").val(data.data[0].user_realname);
	      	$("#birthday").val(data.data[0].birthday);
	      	$("#certificate_num").val(data.data[0].certificate_num);
	      	$("#mobile").val(data.data[0].mobile);
	      	$("#work_unit").val(data.data[0].work_unit);
	      	$("#email").val(data.data[0].email);
	      	$("#QQ").val(data.data[0].qq);
	      	$("#wechat_num").val(data.data[0].wechat_num);
	      	$("#remark").val(data.data[0].email);
	      	$("#identity").val(data.data[0].identity)
	      	$("#login").val(data.data[0].login)
	      	$("#pca_id").val(data.data[0].pca_id)
	      	$("#server_flag").val(data.data[0].serverFlag)
	      	$("#schoolId").val(data.data[0].schoolId)
	      	$("#user_img").val(data.data[0].user_img)
	      	$("#pca").val(data.data[0].pca)
	      	$("#clazz").val(data.data[0].clazz)
	      	$("#school").val(data.data[0].school)
	       }
	 })
//点击提交修改编辑信息
	
	 var reg = /^\s*$/g;
     	
 		$("#btn").click(function(){
			if($("#user_name").val()==""||reg.test($("user_name").val()))
	     	{
	     		layer.msg("用户名不能为空")
	     	}	
		    else{
		    //注册来源
			var asource = 0;
			if($("#source").val()=="平台注册"){
	           asource=1
			}
			else if($("#source").val()=="微博"){
	           asource=2
			}
			else if($("#source").val()=="微信"){
				asource=3
			}
			else if($("#source").val()=="QQ"){
				asource=4
			}
			//性别定义
			var agender = "";
			if($("#sex-1").prop('checked')==true){
				agender= 0
			}
			else if($("#sex-2").prop('checked')==true){
				agender= 1
			}
			//是否会员
			var aflag = "";
			if($("#flag-1").prop('checked')==true){
				aflag= 1
			}
			else if($("#flag-2").prop('checked')==true){
				aflag= 0
			}
			//身份认证
			var identity = "";
			if($("#identity-1").prop('checked')==true){
				identity= 0
			}
			else if($("#identity-2").prop('checked')==true){
				identity= 1
			}
		  	$.ajax({
		      type: 'POST',
		      url: 'http://47.100.200.62:8760/v0.1/user/update',
		      data: {
		        user_id:$("#user_id").val(),     
			    user_name:$("#user_name").val(),
			    password:$("#password").val(),
			    user_realname:$("#user_realname").val(),
			    birthday:$("#birthday").val(),
			    certificate_num:$("#certificate_num").val(),
			    mobile:$("#mobile").val(),
			    work_unit:$("#work_unit").val(),
			    email:$("#email").val(),
			    QQ:$("#QQ").val(),
			    wechat_num:$("#wechat_num").val(),
			    remark:$("#remark").val(),
			    member_flag:aflag,
			    gender:agender,
			    source:asource,
			    login:$("#login").val(),
			    pca_id:parseInt($("#pca_id").val()),
			    serverFlag:$("#server_flag").val(),
			    identity:identity,
			    user_img:$("#user_img").val(),
			    schoolId:$("#schoolId").val(),
			    pca:$("#pca").val(),
			    clazz:$("#clazz").val(),
			    school:$("#school").val()
		      },
		      success: function(data){
		        if(data.success==true){
		        	layer.msg('更新成功！',{icon:1,time:1000});
		        }
		       else {
		         layer.msg(data.msg,{icon:1,time:1000});
		       }
		      },
		     });
     }

 })
 }
</script> 

