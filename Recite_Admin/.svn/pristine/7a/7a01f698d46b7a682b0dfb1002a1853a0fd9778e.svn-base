<script type="text/javascript">
/*学校-编辑*/
function school_edit(title,url,id,w,h){
	layer_show(title,url,w,h);
	 
}
$("#add_school").click(function(event) {
	 sessionStorage.setItem("serchschool","");
});
//根据学校名称查询学校信息
$("#search").click(function(){
	$.ajax({
		type:"get",
		url:"http://47.100.200.62:8760/v0.1/base/school/school",
		data:{
           school_name:$("#serach-text").val()
		},
		success:function(data){
			if(data.data.length==0){
			   layer.msg('没有找到该学校!',{icon: 5,time:1000});
			}
			else {
				var type=""
		  var str = "";
		  var status = "";
		  var iconfont="";
		  var astatus="";
		  var funct="";
		  var stext="";
		  for(var i=0;i<data.data.length;i++){
		  	if(data.data[i].schoole_type==1){
              type ="小学"
		  	}
		  	if(data.data[i].schoole_type==2){
              type ="初中"
		  	}
		  	if(data.data[i].schoole_type==3){
              type ="高中"
		  	}
		  	if(data.data[i].status==0){
              status ="失效";
               stext="启用";
              iconfont="&#xe615;"
              astatus="label-default";
              funct="school_start(this,'10001')"
		  	}
		  	if(data.data[i].status==1){
              status ="正常";
              stext="停用";
              iconfont="&#xe631;"
              astatus="label-success";
              funct="school_start(this,'10001')"
		  	}
		  	str+= 
		  	"<tr class='text-c'><td><input type='checkbox' data-id="+data.data[i].school_id+" value='1' name=''/></td>><td>"+data.data[i].school_name+"</td><td>"+data.data[i].school_pca+"</td><td>"+data.data[i].school_addr+"</td><td>"+type+"</td><td class='td-status'><span class='label "+astatus+" radius'>"+status+"</span></td><td class='f-14'><a style='text-decoration:none' onClick="+funct+" href='javascript:;' title="+stext+"><i class='Hui-iconfont'>"+iconfont+"</i></a> <a title='编辑' href='javascript:;' class='edit' class='ml-5'  style='text-decoration:none'><i class='Hui-iconfont'>&#xe6df;</i></a></td></tr>"
		  }
          $("#tbody").html(str);
          $(".edit").click(function(event){
          	 school_edit('编辑','school_add.html','4','','500');
             sessionStorage.setItem("serchschool",$(this).parent().siblings().eq(0).children().attr("data-id"));
          })
			}
          
		}
	})
})
function schoollist(data){
	      var type=""
		  var str = "";
		  var status = "";
		  var iconfont="";
		  var astatus="";
		  var funct="";
		  var stext="";
		  $("#count").html(data.data.totalCount)
		  for(var i=0;i<data.data.list.length;i++){
		  	if(data.data.list[i].schoole_type==1){
              type ="小学"
		  	}
		  	if(data.data.list[i].schoole_type==2){
              type ="初中"
		  	}
		  	if(data.data.list[i].schoole_type==3){
              type ="高中"
		  	}
		  	if(data.data.list[i].status==0){
              status ="失效";
               stext="启用";
              iconfont="&#xe615;"
              astatus="label-default";
              funct="school_start(this,'10001')"
		  	}
		  	if(data.data.list[i].status==1){
              status ="正常";
              stext="停用";
              iconfont="&#xe631;"
              astatus="label-success";
              funct="school_stop(this,'10001')"
		  	}
		  	str+= 
		  	"<tr class='text-c'><td><input type='checkbox' data-id="+data.data.list[i].school_id+" value='1' name=''/></td><td>"+parseInt(i+1)+"</td><td>"+data.data.list[i].school_name+"</td><td>"+data.data.list[i].school_pca+"</td><td>"+data.data.list[i].school_addr+"</td><td>"+type+"</td><td class='td-status'><span class='label "+astatus+" radius'>"+status+"</span></td><td class='f-14'><a style='text-decoration:none' onClick="+funct+" href='javascript:;' title="+stext+"><i class='Hui-iconfont'>"+iconfont+"</i></a> <a title='编辑' href='javascript:;' class='edit' class='ml-5'  style='text-decoration:none'><i class='Hui-iconfont'>&#xe6df;</i></a></td></tr>"
		  }
          $("#tbody").html(str);
          $(".edit").click(function(event){
          	 school_edit('编辑','school_add.html','4','','500');
             sessionStorage.setItem("serchschool",$(this).parent().siblings().eq(0).children().attr("data-id"));
          })
}
//获取学校信息
$.ajax({
	      type: 'get',
	      url: 'http://47.100.200.62:8760/v0.1/base/school/all',
	      data:{
	      	pageNumber:1
	      },
	      success: function(data){
	      	schoollist(data);
	         //分页
			laypage({  
	        cont: 'page1', 
	        pages: data.data.totalPage, //通过后台拿到的总页数  
	        curr: 1, //初始化当前页  
	        jump: function(e){ //触发分页后的回调  
	            $.getJSON('http://47.100.200.62:8760/v0.1/base/school/all', {pageNumber: e.curr}, function(res){  
	            	schoollist(res);
	            });  
	        }  
	    });
		      
	      }  
	})
/*学校-删除*/
function school_stop(obj,id){
	layer.confirm('确认要停用吗？',function(index){
		
		$.ajax({
      type:"post",
      url:"http://47.100.200.62:8760/v0.1/base/school/delete",
      data: {
        school_Id:$(obj).parent().siblings().eq(0).children().attr("data-id"),
        status:0
      },
      success: function(data){
      	
          $(obj).parent().prepend('<a onClick="school_start(this,id)" href="javascript:;" title="启用" style="text-decoration:none"><i class="Hui-iconfont">&#xe615;</i></a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-default radius">已失效</span>');
		$(obj).remove();
		layer.msg('已失效!',{icon: 5,time:1000});
        } 
      }); 
	});
}
/*学校-添加*/
function school_add(title,url,w,h){
	layer_show(title,url,w,h);
}

/*学校-生效*/
function school_start(obj,id){
	layer.confirm('确认要启用吗？',function(index){
		//此处请求后台程序，下方是成功后的前台处理……
		$(obj).parents("tr").find(".td-manage").prepend('<a onClick="school_stop(this,id)" href="javascript:;" title="停用" style="text-decoration:none"><i class="Hui-iconfont">&#xe631;</i></a>');
		$(obj).parents("tr").find(".td-status").html('<span class="label label-success radius">已启用</span>');
		$(obj).remove();
		layer.msg('已启用!', {icon: 6,time:1000});
	});
}

</script> 
