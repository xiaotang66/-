	<form  class="form form-horizontal" id="form1" enctype="multipart/form-data" name="form1">
		<div class="row cl" id="hidden">
			<label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>课本名称：</label>
			<div class="formControls col-xs-8 col-sm-9">
<!-- 			 <input type="hidden" class="input-text" value="" placeholder="" id="classbookId" name="classbookId">  -->
			<input type="text" class="input-text isnull" value="" placeholder="" id="classbookName" name="classbookName" required="required">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">课本封面：</label>
			<!-- <div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text isnull" value="" placeholder="" id="classbookImg" name="classbookImg">
			</div> -->
			<div class="formControls col-xs-8 col-sm-9">
				 <span class="btn-upload form-group">
				 <input class="input-text upload-url" type="text" name="classbookImg" id="classbookImg" readonly style="width:200px" > 
				<a href="javascript:void();" class="btn btn-primary upload-btn"><i class="Hui-iconfont">&#xe642;</i> 选择图片</a> 
				<input type="file" multiple name="file" class="input-file" >
				</span>
		    </div>
		</div>
		<div class="row cl hot" style="display:none">
			<label class="form-label col-xs-4 col-sm-3">课本热度：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text isnull" value="0" placeholder="" id="hot" name="hot" onkeyup="value=value.replace(/[^\d]/g,'') " ng-pattern="/[^a-zA-Z]" readonly="readonly" >
			</div>
		</div>
		<div class="row cl" style="display:none">
			<label class="form-label col-xs-4 col-sm-3">课本排序值：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<input type="text" class="input-text isnull" value="1" placeholder="" id="sort" name="sort" onkeyup="value=value.replace(/[^\d]/g,'') " ng-pattern="/[^a-zA-Z]">
			</div>
		</div>
		<div class="row cl">
			<label class="form-label col-xs-4 col-sm-3">课本类别：</label>
			<div class="formControls col-xs-8 col-sm-9">
				<select id="classbooktype" name="classbooktypeId">
	
				</select>
			</div>
		</div>
